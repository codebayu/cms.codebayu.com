// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") // uses connection pooling
}

model User {
  id            String       @default(cuid()) @id
  name          String
  email         String   @unique
  password      String
}

model Project {
  id          String   @unique    @default(cuid()) @id
  title       String
  slug        String   @unique
  description String
  image       String
  linkDemo    String
  linkGithub  String
  stacks      String[]
  isShow      Boolean 
  updatedAt   DateTime
  content     String    @db.Text
  isFeatured  Boolean 
}

model Career {
  id            String   @unique    @default(cuid()) @id
  position      String
  company       String
  logo          String
  location      String
  locationType  String
  type          String
  startDate     DateTime 
  endDate       DateTime?
  link          String  
  slug          String    @unique
}

model Service {
  id          String  @unique @default(cuid()) @id
  tag         String
  title       String
  description String
}

model Learn {
  id            String  @unique @default(cuid()) @id
  title         String
  description   String
  slug          String    @unique
  image         String
  level         String
  language      String
  isFeatured    Boolean
  isShow        Boolean
}

model Promotion {
  id            String  @unique @default(cuid()) @id
  text          String
  image         String
  link          String
  isShow        Boolean
  showingOn     String[]
}
